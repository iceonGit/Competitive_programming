#include<bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin >> t;
	while (t--)
	{

		int n;
		string s;
		cin>>n>> s;

		int i = 0, k = 0;
		while (i < n - 1)
		{

			if (s[i] == '(')
			{

				i += 2;
				k++;
			}
			else
			{

				int j = i + 1;
				while (j < n && s[j] != ')')
					j++;
				if (j == n) break;
				k++;
				i = j + 1;
			}
		}

		cout << k << " " << n - i << endl;
	}

	return 0;


}
